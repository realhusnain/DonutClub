<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/input2">

        <androidx.cardview.widget.CardView
            android:id="@+id/blog_card"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/alex_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/blog">


            </ImageView>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/alex_blog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/blog_card"
            android:paddingStart="15dp"
            android:paddingTop="30dp"
            android:text="Alex Jones"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>


        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/Oman"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="25sp"
            android:text="2 mintues ago"
            android:textColor="#989696">

        </TextView>

        <ImageView
            android:id="@+id/btn_three"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/alex_blog"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="23dp"
            android:background="@drawable/ic_baseline_more_horiz_24"
            android:backgroundTint="@color/teal_200"
            app:tint="@color/teal_200">

        </ImageView>

        <TextView
            android:id="@+id/Oman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alex_blog"
            android:layout_marginStart="95dp"
            android:text="Oman"
            android:textColor="#989696"
            android:textSize="15sp">

        </TextView>

        <TextView
            android:id="@+id/description_blog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blog_card"
            android:layout_marginStart="10dp"
            android:paddingTop="5dp"
            android:text="For athletes, high altitiude produces two or more \n condradictory effects on performance.For example"
            android:textColor="#989696"
            android:textSize="16sp">

        </TextView>

        <ImageView
            android:id="@+id/group_pic"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:layout_below="@+id/description_blog"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/image_round"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/groupstudy" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_pic"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_outline_favorite_border_24"
                android:backgroundTint="#CBEC385B"
                android:scaleType="centerCrop"
                android:tint="#CBEC385B"
                tools:ignore="UseAppTint">

            </ImageView>

            <TextView
                android:id="@+id/text21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@+id/heart"
                android:text="21"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:typeface="serif">


            </TextView>

            <ImageView
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@+id/text21"
                android:background="@drawable/chat_24"
                android:backgroundTint="#D7333333"
                android:scaleType="centerCrop">

            </ImageView>

            <TextView
                android:id="@+id/text28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@+id/comment"
                android:text="28"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:typeface="serif">


            </TextView>


        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>